<h1><%= @student.name %></h1>

<% if @student.projects.any? %>
  <h4>Here are the projects for this student:</h4>

  <ul>
    <% @student.projects.each do |project| %>
      <li>
        <%= link_to project.title, student_project_path(@student, project) %> |
        <%= link_to "Alter", edit_student_project_path(@student, project) %> |
        <%= link_to "Destroy", student_project_path(@student, project),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no projects yet!</p>
<% end %>

<p><%= link_to "Add a project", new_student_project_path(@student) %></p>
<p><%= link_to "Edit", edit_student_path(@student) %></p>
<p><%= link_to "Delete", student_path(@student),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p>
  <%= link_to "Return to students", students_path %>
</p>
